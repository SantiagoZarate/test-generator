{
  "name": "@tg/server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "pnpm swagger:build && cross-env NODE_ENV=development ts-node-dev ./src/index.ts",
    "build": "pnpm swagger:build && tsc -p tsconfig.json && mkdir -p ./dist/src/docs/build && cp ./src/docs/build/swagger.yaml ./dist/src/docs/build && cp -a public ./dist",
    "start": "NODE_ENV=production node ./dist/src/index.js",
    "swagger:build": "swagger-cli bundle src/docs/index.yaml --outfile src/docs/build/swagger.yaml --type yaml",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:seed": "cross-env SEED=TRUE tsx ./drizzle/seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@libsql/client": "0.9.0",
    "chalk": "4.1.2",
    "cors": "2.8.5",
    "dotenv": "16.4.5",
    "drizzle-orm": "0.33.0",
    "express": "4.19.2",
    "express-async-errors": "3.1.1",
    "http-status-codes": "2.3.0",
    "nanoid": "3.3.4",
    "swagger-cli": "4.0.4",
    "swagger-ui-express": "4.6.3",
    "yamljs": "0.3.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/morgan": "1.9.9",
    "@types/node": "22.5.0",
    "@types/swagger-ui-express": "4.1.7",
    "@types/yamljs": "0.2.34",
    "cross-env": "7.0.3",
    "drizzle-kit": "0.24.1",
    "morgan": "1.10.0",
    "ts-node-dev": "2.0.0",
    "tsx": "4.19.2",
    "typescript": "^5.5.3"
  }
}
